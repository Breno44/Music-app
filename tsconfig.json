{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": ["src", "tests"],
    "types": ["jest", "node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"],
      "test-utils": ["../tests/config/test-utils.tsx"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": ["src", "tests", "stories"]
}
